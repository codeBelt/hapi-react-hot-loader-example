{
  "name": "hapi-react-hot-loader-example",
  "version": "1.0.0",
  "description": "Simple React Hot Loading example with Hapi Server-side rendering",
  "scripts": {
    "---------- HELPERS -----------------------------------------------------------------------------": "",
    "remove": "rimraf dist",
    "---------- DEVELOPMENT -------------------------------------------------------------------------": "",
    "predev": "npm run remove",
    "dev": "cross-env BABEL_ENV=client NODE_ENV=development webpack-dev-server",
    "---------- STAGING -----------------------------------------------------------------------------": "",
    "prestaging:build": "npm run removeAndBuildServer",
    "staging:build": "cross-env BABEL_ENV=client NODE_ENV=staging webpack -D --watch",
    "staging": "npm run staging:build && npm run start",
    "---------- PRODUCTION --------------------------------------------------------------------------": "",
    "preprod:build": "npm run remove",
    "prod:build": "cross-env BABEL_ENV=client NODE_ENV=production webpack -p",
    "prod": "npm run prod:build",
    "---------- TESTING -----------------------------------------------------------------------------": "",
    "test": "npm run lint && npm run unit",
    "lint": "eslint src --ext .js,.jsx",
    "unit": "jest",
    "------------------------------------------------------------------------------------------------": ""
  },
